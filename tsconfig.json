{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*" // Ensure custom types are included
      ],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/renderer/components/*"],
      "@common/*": ["./src/common/*"],
      "@main/*": ["./src/main/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@src/*": ["./src/*"],
      "@misc/*": ["./misc/*"],
      "@styles/*": ["./src/renderer/styles/*"]
    }
  },
  "include": [
    "src/**/*",
    "tools/**/*",
    "src/types/**/*.d.ts" // Ensure custom type declarations are included
  ]
}
